<!DOCTYPE html>
<html lang="$site.language">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>$template.title</title>
    <link rel="stylesheet" href="$template.url/css/$custom.cssfile.min.css?v=$template.cssmerger" type="text/css" media="all" />
    <!--[if lt IE 9]>
      <script src="$site.files/js/fix/ie9.min.js?v=$template.jsmerger"></script>
    <![endif]-->
    $template.head
    <script type="text/javascript">
      window.ltoptions.theme.cssfile = "$custom.cssfile";
    </script>
  </head>
  <body itemscope itemtype="http://schema.org/WebPage">
    <div class="navbar navbar-default navbar-fixed-top" itemscope itemtype="http://schema.org/WPHeader"><div class="container-fluid">
       <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-menu" aria-expanded="false" aria-controls="navbar-menu">
            <span class="sr-only">$lang.togglenavi</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>

          <a class="navbar-brand" href="$site.url/"><span>$site.name</span></a>
        </div>

<div id="navbar-menu" class="navbar-collapse collapse" role="navigation" itemscope itemtype="http://schema.org/SiteNavigationElement">$template.menu</div>
    </div></div>

<div id="site-description" data-image="$home.image" data-small="$home.smallimage" data-breakpoint="768">
<h1><a href="$site.url/">$site.name</a></h1>
<h3>$site.description</h3>
</div>

<!-- top sidebar
<div class="container-fluid section"><div class="row sidebar-top" itemscope itemtype="http://schema.org/WPSideBar">
template.sidebar2
</div></div>
-->

          <div class="container-fluid section"><div class="row sidebar-$custom.mainsidebar">
                    <div class="content" itemscope itemprop="mainContentOfPage">$template.content</div>
          <div class="main-sidebar"><div class="panel-group" id="sidebar1" role="tablist" aria-multiselectable="true" itemscope itemtype="http://schema.org/WPSideBar">$template.sidebar</div></div>
</div></div>

<div class="container-fluid section">
<hr>
<div class="btn-group dropup" itemscope itemtype="http://schema.org/WPSideBar">
$template.sidebar
</div>
</div>

    <div class="container-fluid section">
      <hr>
      <footer itemscope itemtype="http://schema.org/WPFooter">
            <p>$template.footer</p>
      </footer>
    </div>
  </body>
</html>